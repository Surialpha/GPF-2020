
@{
    ViewBag.Title = "Listado PQRS";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="row">
    <div class="col" align="center">
        <h2>Listado de PQRS</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col">
        <table id="pqrs" class="table table-striped display">
            <thead class="thead bg-gray-900 text-white">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Correo electrónico
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcíón
                    </th>
            </thead>
        </table>
    </div>
</div>

<a data-toggle="modal" data-target="#renderModal" id="click"></a>

<!-- Modal create -->
<div class="modal fade" id="renderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-gradient-dark text-white" align="center">
                <h5 class="modal-title" id="exampleModalLabel">Información detallada de PQRS</h5>
                <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="cuerpo" align="center">


            </div>
        </div>
    </div>
</div>


@section script
{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#pqrs").DataTable({

                "ajax": {

                    "url": '@Url.Action("ListaPqrs","Admin")',
                    "type": "GET",
                    "datatype": "json"
                },


                "language": { "url": '//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json' },


                responsive: true,

                "columns": [
                    { "data": "id" },
                    { "data": "correo" },
                    { "data": "nombre" },
                    { "data": "descripcion" }

                ]

            });

            var table = $('#pqrs').DataTable();

            $('#pqrs tbody').on('click', 'tr', function () {
                var data = table.row(this).data();

                $("#click").trigger("click");

                Details(data['id']);

            });


        });

        function Details(id) {

                var url = "/Admin/DetailsPqrs/"+id;

                $.ajax({
                    url: url,
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $('#cuerpo').html(result);

                        var id = $('#idPqrs').val();

   


                    }
                });
        }


        function Eliminar() {


            var id = $('#idPqrs').val();

            Command: toastr["error"]("<form action='/Admin/Delete' method='get'> <button type='submit'" +
                " class='btn btn-sm btn-danger'> Eliminar registro <i class='fas fa-trash'></i></button><input type='number' name='id' " +
                "asp-for='id' value='" + id + "' hidden /></form> ", "¿Desea eliminar el registo?")

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": 0,
                "extendedTimeOut": 0,
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut",
                "tapToDismiss": false
            }
        }

    </script>

}
