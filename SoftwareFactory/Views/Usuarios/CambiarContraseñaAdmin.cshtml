@model SoftwareFactory.Vendor.ExtraClass.Password

@{
    ViewBag.Title = "CambiarContraseñaAdmin";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}


<div class="row">
    <div class="col" align="center">
        <a href="~/Usuarios/Index" class="btn btn-primary btn-circle float-left" data-toggle="tooltip" data-placement="right" title="Atras"><i class="fas fa-reply"></i></a>
        <h2>Cambiar Contraseña</h2>
    </div>
</div>

<div class="container">



    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <hr />
        <div class="form-horizontal row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div style="margin-top:20%;">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.idU)

                    <div class="form-group col-sm-12 col-md-12 col-lg-12">
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInputGroup">Contraseña antigüa</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-unlock-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.oldPass, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Contraseña de administrador",@id="oldPass"} })
                            </div>
                            @Html.ValidationMessageFor(model => model.oldPass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12 col-md-12 col-lg-12">
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInputGroup">Contraseña nueva</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-key"></i></div>
                                </div>
                                @Html.EditorFor(model => model.newPass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña nueva", @type = "password",@id="nueva"  } })
                            </div>
                            @Html.ValidationMessageFor(model => model.newPass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12 col-md-12 col-lg-12">
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInputGroup">Confirmar Contraseña</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-key"></i></div>
                                </div>
                                <input type="password" name="nueva2" id="nueva2" class="form-control" placeholder="Confirmar contraseña" />
                            </div>
                        </div>
                    </div>


                    <div class="form-group col-sm-12 col-md-12 col-lg-12" align="center" id="validar">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cambiar" id="boton" class="btn bg-gradient-info text-white" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <img src="~/Vendor/img/password.gif" style="height:25rem" alt="Alternate Text" />
            </div>
        </div>

    }

</div>

@section script{


    <script>

        $(document).ready(function () {
            $('#nueva').val("");
            $('#nueva2').val("");
            $('#oldPass').val("");

            $('#validar').hover(function () {
                var passone = $('#nueva').val();
                var passtwo = $('#nueva2').val();

                if (passone.length < 8 || passone != passtwo) {
                    $('#boton').prop('disabled', true);
                }
                else {
                     $('#boton').prop('disabled', false);
                }

            });


        });
    </script>

}