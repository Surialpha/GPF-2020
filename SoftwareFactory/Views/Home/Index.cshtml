<!-- Contactenos -->

<div class="sec3" id="cinco">

    <div class="container my-5">
        <div class="col-12 mt-5  text-center">
            <p class="text-white font-weight-bold" style="font-size:2rem;">Formulario de Contacto</p>
        </div>
        <div class="col-12 text-center">


            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()



                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Correo electronico", @type = "email", @id = "correo" } })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                        <small id="errorCorreo" class="form-text text-danger" hidden></small>
                    </div>
                    


                    <div class="form-group col-md-6">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre o nombre de empresa", @id = "nombre" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        <small id="errorNombre" class="form-text text-danger" hidden></small>
                    </div>
                   
                </div>

                <div class="form-group">
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "4", @cols = "50", @placeholder = "Puedes dejarnos tus dudas y/o preguntas por medio de este formulario...", @id = "desc" })
                </div>
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                <small id="errorDescripcion" class="form-text text-danger" hidden></small>

                <br />
                <br />
                
                <Button type="button" onclick="Validar()" class="btn btn-primary"> Enviar  </Button>

                <input type="submit" value="" id="enviar" class="btn bg-gradient-info text-white" hidden />

            }
        </div>

    </div>

</div> 

