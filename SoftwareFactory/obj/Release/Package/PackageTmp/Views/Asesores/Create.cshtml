@model SoftwareFactory.Models.Asesores

@{
    ViewBag.Title = "Registrar Asesor";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="row">
    <div class="col" align="center">
        <a href="~/Asesores/Index" class="btn btn-primary btn-circle float-left" data-toggle="tooltip" data-placement="right" title="Atras"><i class="fas fa-reply"></i></a>
        <h2>Registrar Asesores</h2>
    </div>
</div>

<div class="container">



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        <div class="form-horizontal row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-sm-12 col-md-12 col-lg-12">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Documento</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-crown"></i></div>
                        </div>
                        <select class="form-control" name="id_asesor" asp-for="id_asesor" id="id_asesor">
                            @foreach (var data in ViewBag.id_asesor)
                            {
                                <option value="@data.documento">@data.nombres @data.apellidos - @data.documento</option>
                            }

                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Inicio del Contrato</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-calendar-alt"></i></div>
                        </div>
                        @Html.EditorFor(model => model.inicio_contrato, new { htmlAttributes = new { @class = "form-control", @placeholder = "Inicio de contrato", @id = "ini", @autocomplete = "off",@readonly = true} })

                    </div>
                    @Html.ValidationMessageFor(model => model.inicio_contrato, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Fin del Contrato</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-calendar-alt"></i></div>
                        </div>
                        @Html.EditorFor(model => model.fin_contrato, new { htmlAttributes = new { @class = "form-control", @placeholder = "Fin del  contrato", @id = "fin", @autocomplete = "off", @readonly = true } })

                    </div>
                    @Html.ValidationMessageFor(model => model.fin_contrato, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-12 col-lg-12" align="center">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Registrar" class="btn bg-gradient-info text-white" />
                    </div>
                </div>
            </div>




        </div>
    }

</div>

@section script{


    <script>

    $(document).ready(function () {
        $('#id_asesor').chosen();

        $('#ini').datepicker({
            dateFormat: 'yy/mm/dd',
            changeMonth: true
        });

        $('#fin').datepicker({
            dateFormat: 'yy/mm/dd',
            changeMonth: true
        });

    });
    </script>

}
