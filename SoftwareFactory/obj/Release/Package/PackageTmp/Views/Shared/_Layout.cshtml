@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fábrica de Software</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="shortcut icon" href="~/Vendor/img/logosena.png" type="image/x-icon">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/FontAwesomeCDN/d502923bed.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
</head>
<body id="top">


    <!--Nav-->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark position-fixed fixed-top">
        <a class="navbar-brand" href="#"><img src="~/Vendor/img/Logo.png" alt="" height="50rem"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto  mr-5">
                <li class="nav-item " style="cursor:pointer;">
                    <a class="nav-link" onclick="ScrollF('uno')"><i id="iconos" class="fas fa-users"></i> Quienes somos </a>
                </li>
                <li class="nav-item" style="cursor:pointer;">
                    <a class="nav-link" onclick="ScrollF('dos')">
                        <i class="fas fa-hands-helping " aria-hidden="true"></i> Nuestros
                        Servicios
                    </a>
                </li>
                <li class="nav-item" style="cursor:pointer;">
                    <a class="nav-link" onclick="ScrollF('cuatro')"><i class="fas fa-list-alt"></i> Solicitudes</a>

                </li>
                <li class="nav-item" style="cursor:pointer;">
                    <a class="nav-link" onclick="ScrollF('tres')"><i class="fas fa-lightbulb"></i> Adquirir</a>
                </li>

                <li class="nav-item" style="cursor:pointer;">
                    <a class="nav-link" onclick="ScrollF('cinco')"><i class="fas fa-comments"></i> Contactenos</a>
                </li>
            </ul>



            @if (Session["Logged"] == null)
            {
                <div class="my-2 my-lg-0">
                    <a href="~/Acceso/IniciarCliente">
                        <button class="btn btn-outline-success my-2 my-sm-0">
                            <i class="fas fa-user-alt"></i> Iniciar Sesión
                        </button>
                    </a>
                    <a href="~/Usuarios/RegistroCliente">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                            <i class="fas fa-user-edit"></i> Registrate
                        </button>
                    </a>
                </div>
            }

            else
            {

                if (@Session["Rol"].ToString().Equals("3"))
                {
                    <div class="my-2 mx-1 my-lg-0">
                        <a href="~/Dashboard/DashboardCliente">
                            <button class="btn btn-outline-success my-2 my-sm-0">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </button>
                        </a>
                    </div>

                    <div class="my-2 mx-1 my-lg-0">
                        <a href="~/Acceso/Cerrar">
                            <button class="btn btn-outline-success my-2 my-sm-0">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesion
                            </button>
                        </a>
                    </div>
                }
                else
                {
                    <div class="my-2 mx-1 my-lg-0">
                        <a href="~/Dashboard/Dashboard">
                            <button class="btn btn-outline-success my-2 my-sm-0">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </button>
                        </a>
                    </div>

                    <div class="my-2 mx-1 my-lg-0">
                        <a href="~/Acceso/Cerrar">
                            <button class="btn btn-outline-success my-2 my-sm-0">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesion
                            </button>
                        </a>
                    </div>
                }



            }

        </div>
    </nav>
    <!-- end Nav -->
    <!-- Carousel -->
    <div id="borde">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Vendor/img/slide1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Vendor/img/slide2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Vendor/img/slide3.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterios</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </div>
    <!-- end Carousel -->


    <div>
        @RenderBody()

        <!-- Boton regresar arriba -->
        <div class="up" onclick="ScrollF('top')">
            <i class="fas fa-chevron-circle-up"></i>
        </div>
        <!-- End Boton regresar arriba -->
        <!-- Footer -->

        <footer id="sticky-footer" class="py-4 bg-dark text-white-50">
            <div class="container text-center">
                <small>Servicio Nacional de Aprendizaje <br /> Centro de Servicios y Gestión Empresarial <br /> Copyright &copy; @DateTime.Now.Year</small>
            </div>
        </footer>
        <!-- End Footer -->
    </div>


    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/funciones.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    <script tag="Toast.js">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });


        $(document).ready(function () {

            

            var error = "@ViewBag.Error";
                    if (error.length > 0) {

                         ScrollF('cinco')
                Command: toastr["error"](error)

                toastr.options = {
                  "closeButton": false,
                  "debug": false,
                  "newestOnTop": false,
                  "progressBar": false,
                  "positionClass": "toast-bottom-right",
                  "preventDuplicates": true,
                  "onclick": null,
                  "showDuration": "300",
                  "hideDuration": "1000",
                  "timeOut": "5000",
                  "extendedTimeOut": "1000",
                  "showEasing": "swing",
                  "hideEasing": "linear",
                  "showMethod": "fadeIn",
                  "hideMethod": "fadeOut"
                }
                    }

                                var success = "@ViewBag.Success";
                    if (success.length > 0) {

                        

                Command: toastr["success"](success)

                toastr.options = {
                  "closeButton": false,
                  "debug": false,
                  "newestOnTop": false,
                  "progressBar": false,
                  "positionClass": "toast-top-right",
                  "preventDuplicates": true,
                  "onclick": null,
                  "showDuration": "300",
                  "hideDuration": "15000",
                  "timeOut": "15000",
                  "extendedTimeOut": "15000",
                  "showEasing": "swing",
                  "hideEasing": "linear",
                  "showMethod": "fadeIn",
                  "hideMethod": "fadeOut"
                }
            }


        });
    </script>

</body>
</html>