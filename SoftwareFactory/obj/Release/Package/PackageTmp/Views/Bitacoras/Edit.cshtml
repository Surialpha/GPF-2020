@model SoftwareFactory.Models.Bitacoras

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm("Edit", "Bitacoras", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">

        @Html.HiddenFor(model => model.fecha_creacion)
        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <div class="col-auto" align="left">
                <label class="font-weight-bold" for="inlineFormInputGroup">ID Bitacora:</label>
                <div class="input-group ">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-crown"></i></div>
                    </div>
                    @Html.EditorFor(model => model.id_bitacora, new { htmlAttributes = new { @class = "form-control",@readonly=true } })
                </div>
                @Html.ValidationMessageFor(model => model.id_bitacora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <div class="col-auto" align="left">
                <label class="font-weight-bold" for="inlineFormInputGroup">Descripción:</label>
                <div class="input-group ">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-clipboard"></i></div>
                    </div>
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "4", @cols = "50" })
                </div>
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
        <input type="submit" value="Editar" class="btn btn-primary"></input>
    </div>

}