@model SoftwareFactory.Models.Bitacoras

@{
    ViewBag.Title = "Details";
    Layout = null;
}


    <div class="row">

        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <div class="col-auto" align="left">
                <label class="font-weight-bold" for="inlineFormInputGroup">ID Bitacora:</label>
                <div class="input-group ">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-crown"></i></div>
                    </div>
                    @Html.EditorFor(model => model.id_bitacora, new { htmlAttributes = new { @class = "form-control", @readonly=true} })
                </div>
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <div class="col-auto" align="left">
                <label class="font-weight-bold" for="inlineFormInputGroup">Fecha de Creación:</label>
                <div class="input-group ">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-calendar-alt"></i></div>
                    </div>
                    @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control",@readonly=true} })
                </div>
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <div class="col-auto" align="left">
                <label class="font-weight-bold" for="inlineFormInputGroup">Descripción:</label>
                <div class="input-group ">
                    <div class="input-group-prepend">
                        <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-clipboard"></i></div>
                    </div>
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "4", @cols = "50" ,@readonly=true})
                </div>
            </div>
        </div>


    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
    </div>
