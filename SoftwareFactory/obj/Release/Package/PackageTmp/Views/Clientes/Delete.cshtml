@model SoftwareFactory.Models.Cliente

@{
    ViewBag.Title = "Eliminar Cliente";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}<div class="row">
    <div class="col" align="center">
        <a href="~/Clientes/Index" class="btn btn-primary btn-circle float-left mr-1" data-toggle="tooltip" data-placement="right" title="Atras"><i class="fas fa-reply"></i></a>
        <a href="~/Clientes/Edit/@Model.id_cliente" class="btn bg-gradient-warning text-white btn-circle float-left ml-1" data-toggle="tooltip" data-placement="right" title="Editar">
            <i class="fas fa-edit"></i>
        </a>
        <h2>Eliminar Cliente</h2>
        <hr />
    </div>
</div>
<div>

    <div class="container">




        <hr />
        <div class="form-horizontal row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-sm-12 col-md-12 col-lg-12">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">ID Clientes</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-crown"></i></div>
                        </div>
                        @Html.EditorFor(model => model.id_cliente, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                    @Html.ValidationMessageFor(model => model.id_cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Tipo de documento</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-address-card"></i></div>
                        </div>
                        <input type="text" name="name" value="@ViewBag.documento" class="form-control" readonly/>
                    </div>
                    @Html.ValidationMessageFor(model => model.id_documento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Nombre</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-address-card"></i></div>
                        </div>
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre u Organización", @readonly = true } })
                    </div>
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Numero de contacto</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-phone-square-alt"></i></div>
                        </div>
                        @Html.EditorFor(model => model.numero_contacto, new { htmlAttributes = new { @class = "form-control", @placeholder = "Numero contacto", @readonly = true } })
                    </div>
                    @Html.ValidationMessageFor(model => model.numero_contacto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-6 col-lg-6">
                <div class="col-auto">
                    <label class="sr-only" for="inlineFormInputGroup">Tipo cliente</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-gradient-info text-white"><i class="fas fa-sitemap"></i></div>
                        </div>
                        <input type="text" name="name" value="@ViewBag.cliente" class="form-control" readonly />
                    </div>
                    @Html.ValidationMessageFor(model => model.tipo_cliente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
    <br />
    <div align="center">
        <h4 class="text-danger">Estas seguro que deseas eliminar?</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button class="btn btn-danger text-white ml-3" type="submit" data-toggle="tooltip" data-placement="right" title="Eliminar">
                <i class="fas fa-trash"></i> Eliminar
            </button>
        }
    </div>

</div>
